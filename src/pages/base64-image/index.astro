---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Base64ImageConverter from '../../components/tools/Base64ImageConverter.tsx';

// 检测语言路径
const pathname = Astro.url.pathname;
const isZhPath = pathname.includes('/zh/');
const currentLang = isZhPath ? 'zh' : 'en';
const pageName = 'base64-image';

// 动态加载翻译
let translations;
try {
  if (currentLang === 'zh') {
    translations = await import('../../i18n/pages/base64-image/zh.json');
  } else {
    translations = await import('../../i18n/pages/base64-image/en.json');
  }
} catch (error) {
  console.error('Failed to load translations:', error);
  // 使用 fallback 翻译
  translations = await import('../../i18n/pages/base64-image/en.json');
}

const t = translations.default;
---

<BaseLayout 
  title={t.meta.title} 
  description={t.meta.description} 
  keywords={t.meta.keywords}
  currentLang={currentLang}
  pageName={pageName}
>
  <!-- Hero Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full text-sm font-medium mb-6">
        <span>🔄</span>
        <span>{t.header.subtitle}</span>
      </div>
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {t.hero.title}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        {t.hero.subtitle}
      </p>
    </div>
  </section>

  <!-- Main Tool Area -->
  <section class="py-12 bg-white dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-4">
      <Base64ImageConverter client:load />
    </div>
  </section>

  <!-- Instructions Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">{t.guide.title}</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">{t.guide.subtitle}</p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {t.guide.steps.map((step: any, index: number) => (
          <div class="bg-white dark:bg-gray-700 p-6 rounded-xl shadow-lg">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-lg flex items-center justify-center text-xl font-bold mb-4">
              {String(index + 1).padStart(2, '0')}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{step.title}</h3>
            <p class="text-gray-600 dark:text-gray-400">
              {step.desc}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">{t.faq.title}</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">{t.faq.subtitle}</p>
      </div>
      <div class="grid md:grid-cols-2 gap-8">
        {t.faq.items.map((item: any, index: number) => {
          const icons = ['❓', '📊', '🔐', '💡'];
          return (
            <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-xl">
              <div class="flex items-center gap-3 mb-3">
                <span class="text-2xl">{icons[index] || '💡'}</span>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{item.question}</h3>
              </div>
              <p class="text-gray-600 dark:text-gray-400">
                {item.answer}
              </p>
            </div>
          );
        })}
      </div>
    </div>
  </section>
</BaseLayout> 