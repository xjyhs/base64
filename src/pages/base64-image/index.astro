---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Base64ImageConverter from '../../components/tools/Base64ImageConverter.tsx';
import fs from 'fs';
import path from 'path';

// Load English translations (default)
const translationsPath = path.resolve('src/i18n/pages/base64-image/en.json');
const translations = JSON.parse(fs.readFileSync(translationsPath, 'utf-8'));

const { meta, header, hero, guide, faq } = translations;
---

<BaseLayout
  title={meta.title}
  description={meta.description}
  keywords={meta.keywords}
>
  <!-- Hero Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full text-sm font-medium mb-6">
        <span>ğŸ”„</span>
        <span>{header.subtitle}</span>
      </div>
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {hero.title}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        {hero.subtitle}
      </p>
    </div>
  </section>

  <!-- Main Tool Area -->
  <section class="py-12 bg-white dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-4">
      <Base64ImageConverter client:load />
    </div>
  </section>

  <!-- Instructions Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">{guide.title}</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">{guide.subtitle}</p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {guide.steps.map((step, index) => (
          <div class="bg-white dark:bg-gray-700 p-6 rounded-xl shadow-lg">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-lg flex items-center justify-center text-xl font-bold mb-4">
              {String(index + 1).padStart(2, '0')}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{step.title}</h3>
            <p class="text-gray-600 dark:text-gray-400">
              {step.desc}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">{faq.title}</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">{faq.subtitle}</p>
      </div>
      <div class="grid md:grid-cols-2 gap-8">
        {faq.items.map((item, index) => {
          const icons = ['â“', 'ğŸ“Š', 'ğŸ”', 'ğŸ’¡'];
          return (
            <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-xl">
              <div class="flex items-center gap-3 mb-3">
                <span class="text-2xl">{icons[index] || 'ğŸ’¡'}</span>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{item.question}</h3>
              </div>
              <p class="text-gray-600 dark:text-gray-400">
                {item.answer}
              </p>
            </div>
          );
        })}
      </div>
    </div>
  </section>
</BaseLayout> 